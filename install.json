      "widgetbutton": {
        "title": "Widget Button",
        "order": 0,
        "type": "object",
        "properties": {
          "icon": {
            "title": "Icon",
            "description": "The icon for your widget",
            "order": 0,
            "type": "string",
            "format": "radios",
            "enum": [
              "speech-bubble",
              "envelope",
              "telephone",
              "person",
              "world",
              "custom"
            ],
            "enumNames": {
              "speech-bubble": "üó®Ô∏è",
              "envelope": "‚úâÔ∏è",
              "telephone": "üìû",
              "person": "üë§",
              "world": "üåç",
              "custom": "‚öôÔ∏è"
            }
          },
          "iconCustom": {
            "title": "Custom Icon",
            "order": 1,
            "type": "string",
            "format": "image",
            "default": "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fcdn2.iconfinder.com%2Fdata%2Ficons%2Ftransparent-round-icons%2F512%2Fchat.png&f=1&nofb=1",
            "showIf": {
              "widgetbutton.icon": "custom"
            }
          },
          "widgetColor": {
            "title": "Widget Button Color",
            "order": 3,
            "format": "color",
            "type": "string"
          },
          "iconColor": {
            "title": "Icon Color",
            "order": 2,
            "format": "color",
            "type": "string"
          }
        }
      },
      "location": {
        "title": "Location",
